{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": ["ESNext"],
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@utility-ts/core": ["./packages/core/index.d.ts"],
      "@utility-ts/core/*": ["./packages/core/*"],
      "@utility-ts/vue": ["./packages/vue/index.d.ts"],
      "@utility-ts/vue/*": ["./packages/vue/*"],
      "@utility-ts/react": ["./packages/react/index.d.ts"],
      "@utility-ts/react/*": ["./packages/react/*"],
      "@utility-ts/shared": ["./packages/shared/index.d.ts"],
      "@utility-ts/shared/*": ["./packages/shared/*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types": [],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"]
}
